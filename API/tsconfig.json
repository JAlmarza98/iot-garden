{
  "compilerOptions": {
    "target": "es5",                            
    "module": "commonjs",                       
    "allowJs": true,                         
    "outDir": "build",                          
    "rootDir": "./src",                         
    "strict": true,
    "baseUrl": ".",                         
    "paths": {
      "@src/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@config/*": ["./src/config/*"],
    },                             
    "typeRoots": ["./node_modules/@types", "./src/@types"],                         
    "esModuleInterop": true,
    "skipLibCheck": true,                       
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
